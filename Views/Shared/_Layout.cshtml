<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="header">
        <table>
            <tr>
                <td>
                    <div id="logo"><img style="width:100px" src="~/Content/site/images/nhl.jpg" /></div>
                </td>
                <td width="100%" style="vertical-align:bottom">
                    <div id="auth-menu" style="text-align:right">
                        @Html.Partial("_AuthMenu")
                    </div>
                </td>
            </tr>
        </table>

        <ul id="horizontal-menu">
            <li>@Html.ActionLink("Main", "Index", "Home")</li>
            <li><a href="#">Page 2</a></li>
            <li><a href="#">Page 3</a></li>
            <li><a href="#">Page 4</a></li>
        </ul>
    </div>
    <br />

    <table>
        <tr>
            <td style="vertical-align:top;" width="300px">
                <ul id="vertical-menu">
                    <li><a href="#">Page 5</a></li>
                    <li><a href="#">Page 6</a></li>
                    <li><a href="#">Page 7</a></li>
                    <li><a href="#">Page 8</a></li>
                    <li><a href="#">Page 9</a></li>
                </ul>
            </td>
            <td style="vertical-align:top">
                @RenderBody()
            </td>
        </tr>
    </table>


    <hr />
    <div id="footer" style="text-align:center">Footer</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/auth-dialog.js"></script>
</body>
</html>
